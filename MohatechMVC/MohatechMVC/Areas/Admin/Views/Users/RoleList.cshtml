@model IEnumerable<MohatechDomain.Role>

@{
    ViewBag.Title = "نقش کاربران";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4>نقش کاربران</h4>
<hr />
<p class="top-btn">
    @Html.ActionLink("افزودن نقش کاربر", "CreateRole", new { }, new { @class = "create-btn" })
    @Html.ActionLink("لیست کاربران", "Index", new { }, new { @class = "create-btn" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                <a href="/Admin/Users/EditRole/@item.RoleId"><i class="far fa-edit"></i></a> |
                <a href="/Adin/Users/DeleteRole/@item.RoleId"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
    }

</table>
