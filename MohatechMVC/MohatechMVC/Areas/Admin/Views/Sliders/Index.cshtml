@model IEnumerable<MohatechDomain.Slider>

@{
    ViewBag.Title = "لیست اسلایدر";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4>لیست اسلایدر</h4>
<hr />
<p>
    @Html.ActionLink("افزودن اسلایدر", "Create", null, new { @class = "create-btn" })
</p>
<table class="table mt-4">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sort)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="/Content/Image/Slider/Thumbnail/@item.ImageName" alt="@item.Title" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sort)
            </td>
            <td>
                <a href="/Admin/Sliders/Edit/@item.SliderId"><i class="far fa-edit"></i></a> |
                <a href="/Admin/Sliders/Delete/@item.SliderId"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
    }

</table>
