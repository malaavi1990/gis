@model IEnumerable<MohatechDomain.Product>

@{
    ViewBag.Title = "لیست محصولات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<h4>لیست محصولات</h4>
<hr/>

<p>
    @Html.ActionLink("افزودن محصول", "Create", new { }, new { @class = "create-btn" })
    @Html.ActionLink("لیست دسته بندی ها", "CategoryList", new { }, new { @class = "create-btn" })
</p>
<table class="table table-bordered mt-4">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sort)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Content/Image/Product/Thumbnail/@item.ImageName" alt="@item.Title" class="img-thumbnail" style="width: 100px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sort)
            </td>
            <td>
                <a href="/Admin/Products/Edit/@item.ProductId"><i class="far fa-edit"></i></a> |
                <a href="/Admin/Products/Gallery/@item.ProductId"><i class="fas fa-images"></i></a> |
                <a href="/Admin/Products/Delete/@item.ProductId"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
    }

</table>
