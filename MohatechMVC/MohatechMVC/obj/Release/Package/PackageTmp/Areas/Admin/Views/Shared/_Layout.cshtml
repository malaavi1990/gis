<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل مُهاتک - @ViewBag.Title</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link href="~/Content/Styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Styles/PanelStyle.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />
    @RenderSection("Styles", false)
</head>
<body>
    <!-- Header -->
    <section id="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="user">
                        <img src="~/Content/Image/Product/user123456789.png" alt="" />
                        <h3>@User.Identity.Name</h3>

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="notification">
                        <a href="/Logout"><i class="fas fa-power-off"></i></a>
                        <a href="#">
                            <span class="badge badge-primary">3</span>
                            <i class="far fa-bell"></i>
                        </a>
                        <a href="#">
                            <span class="badge badge-primary">1</span>
                            <i class="far fa-envelope"></i>
                        </a>
                        <a href="#">
                            <span class="badge badge-primary">4</span>
                            <i class="far fa-comments"></i>
                        </a>
                        <a href="#">
                            <span class="badge badge-primary">2</span>
                            <i class="fas fa-exclamation"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Content -->
    <section id="content">
        <div class="row">
            <div class="col-lg-3 side-bar">
                <div class="menu">
                    <ul class="list-unstyled">
                        <li>
                            <a class="active" href="/Admin/Home/Index "><i class="fas fa-box"></i> داشبورد</a>
                        </li>
                        <li>
                            <a href="/Admin/Setting/Index"><i class="fas fa-toolbox"></i> تنظیمات سایت</a>
                        </li>
                        <li>
                            <a href="/Admin/Users/Index"><i class="fas fa-users"></i> مدیریت کاربران</a>
                        </li>
                        <li>
                            <a href="/Admin/Sliders/Index"><i class="fas fa-tv"></i> مدیریت اسلایدر</a>
                        </li>
                        <li>
                            <a href="/Admin/Products/Index"><i class="fas fa-project-diagram"></i> مدیریت محصولات</a>
                        </li>
                        <li>
                            <a href="/Admin/Softwares/Index"><i class="fas fa-building"></i> مدیریت نرم افزارها</a>
                        </li>
                        <li>
                            <a href="/Admin/Books/Index"><i class="fab fa-pied-piper-alt"></i> مدیریت کتاب ها</a>
                        </li>
                        <li>
                            <a href="/Admin/News/Index"><i class="fas fa-project-diagram"></i> مدیریت اخبار</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="main-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="copy-right">
                <p>کپی رایت</p>
            </div>
        </div>
    </footer>


    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    // @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)

</body>
</html>