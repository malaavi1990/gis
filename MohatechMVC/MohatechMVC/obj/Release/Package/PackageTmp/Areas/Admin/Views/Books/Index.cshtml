@model IEnumerable<MohatechDomain.Book>

@{
    ViewBag.Title = "لیست کتابها";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4>لیست کتابها</h4>
    <hr />

    <p>
        @Html.ActionLink("افزودن کتاب", "Create", null, new { @class = "create-btn" })
    </p>
    <table class="table table-bordered mt-4">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Content/Image/Book/Thumbnail/@item.ImageName" alt="@item.Title" class="img-thumbnail" style="width: 100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visit)
                </td>
                <td>
                    <a href="/Admin/Books/Edit/@item.BookId"><i class="far fa-edit"></i></a> |
                    <a href="/Admin/Books/Delete/@item.BookId"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }

    </table>
</div>