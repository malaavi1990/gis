@model IEnumerable<MohatechDomain.User>

@{
                /**/

                ViewBag.Title = "لیست کاربران";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles
{

}
<h4>لیست کاربران</h4>
<hr />
<p class="top-btn">
    @Html.ActionLink("افزودن کاربر", "Create", new { }, new { @class = "create-btn" })
    @Html.ActionLink("لیست نقش کاربران", "RoleList", new { }, new { @class = "create-btn" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName) و @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role.RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
            <td>
                <a href="/Admin/Users/Edit/@item.UserId"><i class="far fa-edit"></i></a> |
                <a href="/Admin/Users/Details/@item.UserId"><i class="fas fa-list"></i></a> |
                <a href="/Admin/Users/Delete/@item.UserId"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
    }
</table>

@section scripts
{
}
