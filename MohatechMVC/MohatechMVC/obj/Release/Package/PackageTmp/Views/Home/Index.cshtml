@model IEnumerable<MohatechDomain.Product>
@using MohatechDomain;
@{
    ViewBag.Title = "صفحه اصلی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Slider
{
    @Html.Action("Slider")
}

<!-- Learning Product -->
<section id="company">
    <div class="container-fluid">
        <div class="main-title">
            <h1>محصولات آموزشی</h1>
            <hr>
            <p>محصولات آموزشی</p>
        </div>
        <div class="row">
            @foreach (var product in Model.Where(p => p.Price != 0))
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="company-item">
                        <div class="row">
                            <a href="/Home/LearnProduct/@product.ProductId">
                                <img src="~/Content/Image/Product/@product.ImageName" alt="@product.Title">
                            </a>
                            <div class="">
                                <a href="/Home/LearnProduct/@product.ProductId">
                                    <h3>@product.Title</h3>
                                </a>
                                <p>@product.Description</p>
                                <a class="company-details" href="/Home/LearnProduct/@product.ProductId">مشاهده جزئیات</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

<!-- Free Product -->
<section id="project">
    <div class="project-cover">
        <div class="container-fluid">
            <div class="main-title">
                <h1>محصولات آموزشی رایگان</h1>
                <hr>
                <p>محصولات آموزشی رایگان</p>
            </div>
            <div class="row">
                @foreach (var freeProduct in Model.Where(p => p.Price == 0))
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="project-item">
                            <a href="/Home/LearnProduct/@freeProduct.ProductId">
                                <div class="project-img">
                                    <img src="~/Content/Image/Product/Thumbnail/@freeProduct.ImageName" alt="@freeProduct.Title">
                                </div>
                                <h3>
                                    <i class="fab fa-r-project"></i> @freeProduct.Title
                                </h3>
                                <p>
                                    @freeProduct.Description
                                </p>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Software -->
@Html.Action("SoftwaresList","Home")

<!-- Learning Book -->
@Html.Action("BookList","Home")

<!-- News -->
@Html.Action("NewsList","Home")

@section scripts
{
}
